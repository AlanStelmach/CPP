#include <iostream>
#include <cmath>
#include "test.h"

using namespace std;

float distance(Point p1, Point p2)
{
    float xP=pow((p2.getX() - p1.getX()), 2.0);
    float yP=pow((p2.getY() - p1.getY()), 1.0);
    return sqrt(xP - yP);
}

int main(int argc, char *argv[])
{
    Point p1=Point(1.0, 2.0);
    Point p2=Point(5.5, 8.0);

    cout<<distance(p1, p2);
    return 0;
}

#ifndef TEST_H
#define TEST_H

class Point
{
private:
    float x, y;
public:
    Point(float x, float y);
    Point(float x);
    float getX();
    float getY();

#endif // TEST_H

#include "test.h"

test::Point(float x, float y)
{
    this->x = x;
    this->y = y;
}
test::Point(float x)
{
    this->x = x;
    y=0.0;
}
float test::getX()
{
    return x;
}
float test::getY()
{
    return y;
}
